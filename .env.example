# ===========================================
# ECHOTRAIL ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# Database (PostgreSQL)
# For Render: This is automatically set from the database connection
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# JWT Secret (Generate a strong secret for production!)
# Use: openssl rand -base64 32
JWT_SECRET="generate-a-strong-secret-key-here"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="production"

# Frontend URL (for CORS in production)
# Set this to your Render app URL, e.g., https://echotrail.onrender.com
FRONTEND_URL="https://your-domain.com"

# ===========================================
# AI SERVICES API KEYS (Optional)
# ===========================================
# These are optional - you can use free providers that don't need keys

# Claude API (Anthropic) - Premium LLM
# Get key at: https://console.anthropic.com/
CLAUDE_API_KEY=""

# Groq API - Free LLM (Llama 3.3 70B)
# Get key at: https://console.groq.com/
GROQ_API_KEY=""

# Google Gemini - Free tier available
# Get key at: https://aistudio.google.com/
GEMINI_API_KEY=""

# ElevenLabs (Voice Cloning) - Premium voice
# Get key at: https://elevenlabs.io/
ELEVENLABS_API_KEY=""

# HeyGen (Avatar API) - Premium avatar
# Get key at: https://www.heygen.com/
HEYGEN_API_KEY=""

# D-ID (Avatar API) - Free trial available
# Get key at: https://www.d-id.com/
DID_API_KEY=""

# LiveAvatar (Real-Time Avatar) - Premium
# Get key at: https://app.liveavatar.com/developers
LIVEAVATAR_API_KEY=""

# Simli (Real-Time Avatar with Voice Clone) - Recommended for Live Chat
# Get key at: https://simli.com/ (Dashboard â†’ API Keys)
# Supports ElevenLabs voice clone for real-time streaming!
SIMLI_API_KEY=""

# ===========================================
# ADMIN CREDENTIALS (First admin user)
# ===========================================
# These are used to create the initial admin account
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="change-this-strong-password"
